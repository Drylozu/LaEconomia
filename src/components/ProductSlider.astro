---
import product from '../assets/products/ponds.png';

import { Image } from 'astro:assets';

const { title } = Astro.props;
---

<section class="w-full flex justify-center px-4 mt-10 mb-5 pb-5">
  <div class="w-full max-w-desktop flex flex-col gap-5">
    <div
      class="w-full flex items-center justify-between md:justify-start gap-4"
    >
      <h2 class="font-bold md:text-2xl">{title}</h2>
      <span class="underline text-primary">Ver todos</span>
    </div>

    <div
      class="grid max-xl:grid-flow-col xl:grid-cols-6 min-h-[300px] xl:min-h-[350px] 2xl:min-h-[400px] overflow-auto gap-8"
    >
      {
        Array(6)
          .fill(0)
          .map(() => (
            <div class="flex flex-col p-2 bg-white border border-gray-200 rounded-lg shadow-2xl shadow-black/5 max-xl:min-w-48 h-full">
              <div class="w-full aspect-square h-auto flex items-center justify-center">
                <Image
                  src={product}
                  alt="Crema Ponds"
                  class="w-full h-auto object-cover"
                />
              </div>

              <div class="flex flex-col justify-between p-2 h-full">
                <div>
                  <h3 class="w-full text-ellipsis line-clamp-2 text-sm">
                    Crema Pondâ€™s Clarant B3 Piel Normal A Grasa Porte x 100G
                  </h3>

                  <p class="mt-2 font-bold text-xl">$10.250</p>
                  <span class="text-xs text-gray-500">Gramo a $109</span>
                </div>

                <div class="w-full flex items-center">
                  <button class="rounded-full w-full bg-primary text-white py-2 font-medium">
                    Agregar
                  </button>
                </div>
              </div>
            </div>
          ))
      }
    </div>
  </div>
</section>
