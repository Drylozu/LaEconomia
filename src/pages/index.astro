---
import '../styles/global.css';
import Layout from '../layouts/Layout.astro';
import VideoBanner from '../components/VideoBanner.astro';

import Navbar from '../components/Navbar.astro';
import Menu from '../components/Menu.astro';
import MainBanner from '../components/MainBanner.astro';
import Categories from '../components/Categories.astro';
import AdBanner from '../components/AdBanner.astro';
import Footer from '../components/Footer.astro';
import ProductSlider from '../components/ProductSlider.astro';
import CategoriesCards from '../components/CategoriesCards.astro';
import BrandsSlider from '../components/BrandsSlider.astro';

import bannerAntibioticos from '../assets/banners/antibioticos.png';
import mobileAntibioticos from '../assets/banners/mobile-antibioticos.png';
import bannerVidaSana from '../assets/banners/vida-sana.png';
import mobileVidaSana from '../assets/banners/mobile-vida-sana.png';

import ArrowLeftIcon from '../components/icons/ArrowLeft.astro';
import ArrowRightIcon from '../components/icons/ArrowRight.astro';

import exclusivos from '../assets/banners/exclusivos.jpg';
import mobileExclusivos from '../assets/banners/mobile-exclusivos.png';

import genfar from '../assets/brands/genfar.png';
import vick from '../assets/brands/vick.png';
import floratil from '../assets/brands/floratil.png';
import speedstick from '../assets/brands/speedstick.png';
import ensure from '../assets/brands/ensure.png';
import colgate from '../assets/brands/colgate.png';
import strepsils from '../assets/brands/strepsils.png';

import enterogermina from '../assets/brands/enterogermina.png';
import colgateMarca from '../assets/brands/colgate-1.png';
import neutrogena from '../assets/brands/neutrogena.png';
import vickMarca from '../assets/brands/vick-1.png';
import electrolit from '../assets/brands/electrolit.png';
import engystol from '../assets/brands/engystol.png';
---

<Layout>
  <VideoBanner />
  <Navbar />
  <Menu />

  <MainBanner />
  <Categories />

  <AdBanner banner={bannerAntibioticos} mobile={mobileAntibioticos} />

  <ProductSlider title="Las mejores ofertas 🚨" />
  <CategoriesCards />
  <ProductSlider title="Lo más buscado 🤩" />

  <BrandsSlider
    title="Inspirados en tu bienestar 🤗"
    brands={[
      {
        image: genfar,
        title: 'Genéricos',
      },
      {
        image: vick,
        title: 'Descongestionantes tópicos',
      },
      {
        image: floratil,
        title: 'Diarrea',
      },
      {
        image: speedstick,
        title: 'Desodorantes',
      },
      {
        image: ensure,
        title: 'Suplemento nutricional',
      },
      {
        image: colgate,
        title: 'Enjuagues',
      },
      {
        image: strepsils,
        title: 'Garganta',
      },
    ]}
  />

  <AdBanner banner={bannerVidaSana} mobile={mobileVidaSana} />

  <BrandsSlider
    title="Marcas destacadas ⭐️"
    brands={[
      {
        image: enterogermina,
        horizontal: true,
        padding: true,
      },
      {
        image: genfar,
      },
      {
        image: colgateMarca,
        horizontal: true,
      },
      {
        image: neutrogena,
        horizontal: true,
      },
      {
        image: vickMarca,
        horizontal: true,
      },
      {
        image: electrolit,
        horizontal: true,
        padding: true,
      },
      {
        image: engystol,
        horizontal: true,
        padding: true,
      },
    ]}
  />

  <section class="max-w-desktop px-4 mx-auto w-full my-10 relative">
    <div class="max-xl:hidden absolute -translate-y-1/2 left-0 top-1/2">
      <div
        class="rounded-full bg-primary border-primary-dark p-2 cursor-pointer"
      >
        <ArrowLeftIcon />
      </div>
    </div>

    <div class="max-xl:hidden absolute -translate-y-1/2 right-0 top-1/2">
      <div
        class="rounded-full bg-primary border-primary-dark p-2 cursor-pointer"
      >
        <ArrowRightIcon />
      </div>
    </div>

    <picture>
      <source media="(min-width: 728px)" srcset={exclusivos.src} width={1280} />
      <img
        src={mobileExclusivos.src}
        width={1280}
        class="w-full h-auto rounded-lg"
      />
    </picture>
  </section>

  <Footer />
</Layout>
